@model MovieStore.Models.Domain.Movie
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Movie</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" class="form-control" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Title">Title *</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GenreId">Genre *</label>
                    <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price">Price *</label>
                    <input type="number" class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImgURL">Image URL *</label>
                    <input type="text" class="form-control" asp-for="ImgURL" />
                    <span asp-validation-for="ImgURL" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="ActorId">Actor *</label>
                    <select asp-for="ActorId" asp-items="Model.ActorList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="ActorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title">Director *</label>
                    <select asp-for="DirectorId" asp-items="Model.DirectorList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="DirectorId" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Movie/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>
